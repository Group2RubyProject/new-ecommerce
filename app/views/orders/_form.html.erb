<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :pay_type %>
    <%= f.input :created_at %>
    <%= f.input :updated_at %>
    <%= f.input :order_status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
